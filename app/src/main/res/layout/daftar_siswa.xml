<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:background="#322F2F"
        android:layout_width="match_parent"
        android:layout_height="80dp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="#322F2F"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/daftarsiswa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daftar Sebagai Siswa"
                android:textColor="#FFFFFF"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <Space
                android:id="@+id/spacesiswa"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/daftarsiswa"/>
            <EditText
                android:id="@+id/nisn"
                android:layout_width="match_parent"
                android:layout_marginStart="120dp"
                android:layout_height="50dp"
                android:layout_below="@id/spacesiswa"
                android:layout_centerHorizontal="true"
                android:background="@drawable/roundedbutton3"
                android:hint="Nomor Induk Siswa Nasional"
                android:inputType="number"
                android:paddingLeft="20dp" />
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_marginStart="120dp"
                android:layout_height="50dp"
                android:layout_below="@id/nisn"
                android:layout_centerHorizontal="true"
                android:background="@drawable/roundedbutton3"
                android:hint="Nama Siswa"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:layout_marginTop="20dp"/>
            <EditText
                android:id="@+id/katasandi"
                android:layout_width="match_parent"
                android:layout_marginStart="120dp"
                android:layout_height="50dp"
                android:layout_below="@id/email"
                android:layout_centerHorizontal="true"
                android:background="@drawable/roundedbutton3"
                android:hint="Kata Sandi"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:layout_marginTop="20dp"/>
            <EditText
                android:id="@+id/konfirmpassword"
                android:layout_width="match_parent"
                android:layout_marginStart="120dp"
                android:layout_height="50dp"
                android:layout_below="@id/katasandi"
                android:layout_centerHorizontal="true"
                android:background="@drawable/roundedbutton3"
                android:hint="Konfirmasi Kata Sandi"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:layout_marginTop="20dp"/>

            <Space
                android:id="@+id/spacedaftar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/konfirmpassword"/>

            <Button
                android:id="@+id/button1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@id/spacedaftar"
                android:layout_centerHorizontal="true"
                android:background="@drawable/roundedbutton"
                android:shadowRadius="0"
                android:text="MASUK"
                android:textColor="#000000"
                android:textSize="16sp" />

        </RelativeLayout>

    </FrameLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:text="Copyright \u00a9 Nerissa Arviany"
        android:textStyle="bold"
        android:paddingBottom="10dp"
        android:textAlignment="center"/>

</LinearLayout>