<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/background1"
        android:layout_below="@id/frame1"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="180dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="60dp"
                android:background="#322F2F"/>

            <ImageView
                android:id="@+id/foto"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@color/ic_person_background"
                android:foreground="@drawable/ic_person_foreground"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="135dp"/>

            <Space
                android:id="@+id/space4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/foto"/>

            <ImageView
                android:id="@+id/person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_person_white_24dp"
                android:layout_below="@id/space4"
                android:layout_toLeftOf="@id/namalengkap"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/namalengkap"
                android:layout_marginLeft="20dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/space4"
                android:hint="Nama Lengkap"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="12sp"
                android:paddingLeft="5dp"
                android:layout_centerHorizontal="true" />

            <Space
                android:id="@+id/space5"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/namalengkap"/>

            <ImageView
                android:id="@+id/place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_place_white_24dp"
                android:layout_below="@id/space5"
                android:layout_toLeftOf="@id/lokasi"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/lokasi"
                android:layout_marginLeft="20dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/space5"
                android:hint="Lokasi"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="12sp"
                android:paddingLeft="5dp"
                android:layout_centerHorizontal="true" />

            <Space
                android:id="@+id/space6"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/lokasi"/>

            <ImageView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_markunread_white_24dp"
                android:layout_below="@id/space6"
                android:layout_toLeftOf="@id/pesan"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/pesan"
                android:layout_marginLeft="20dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/space6"
                android:hint="Email"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="12sp"
                android:paddingLeft="5dp"
                android:inputType="textEmailAddress"
                android:layout_centerHorizontal="true" />

            <Space
                android:id="@+id/space7"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/pesan"/>

            <ImageView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_phone_white_24dp"
                android:layout_below="@id/space7"
                android:layout_toLeftOf="@id/telpon"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/telpon"
                android:layout_marginLeft="20dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/space7"
                android:hint="Nomor Telepon"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="12sp"
                android:paddingLeft="5dp"
                android:inputType="phone"
                android:layout_centerHorizontal="true" />

            <Space
                android:id="@+id/space8"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/telpon"/>

            <ImageView
                android:id="@+id/lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_lock_white_24dp"
                android:layout_below="@id/space8"
                android:layout_toLeftOf="@id/password"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/password"
                android:layout_marginLeft="20dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/space8"
                android:hint="Password"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="12sp"
                android:paddingLeft="5dp"
                android:inputType="textPassword"
                android:layout_centerHorizontal="true" />


            <Button
                android:id="@+id/button1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@id/password"
                android:layout_centerHorizontal="true"
                android:background="@drawable/roundedbutton"
                android:shadowRadius="0"
                android:paddingLeft="60dp"
                android:drawableLeft="@drawable/ic_save_black_24dp"
                android:text="SIMPAN DATA"
                android:gravity=""
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginTop="75dp"/>

            <Space
                android:layout_below="@id/button1"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>

        </RelativeLayout>



    </ScrollView>

    <FrameLayout
        android:id="@+id/frame1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="#322F2F"
            android:layout_width="match_parent"
            android:layout_height="80dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Data Tersimpan"
            android:textSize="22sp"
            android:textColor="#FFFFFF"/>
    </FrameLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#322F2F"
        app:elevation="0dp"
        app:menu="@menu/bottomnav" />


</RelativeLayout>
